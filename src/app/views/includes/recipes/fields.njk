<div class="details">

    <div class="item">
        <div>Image da receita</div>
        
        <div id="photos-preview">
            <div id="photos-upload">
                <input 
                id="photos-input"
                type="file" 
                name="photos" 
                multiple
                accept="image/*"
                onchange="PhotosUpload.handleFileInput(event, 5)"
                >
                <div class="photos-add">
                    <i class="material-icons">add</i>
                </div>
            </div>
        </div>
    </div>

    <div class="item">
        <div>Title</div>
        <div>
            <input 
            class="input__create" 
            type="text" 
            name="title"
            value="{{ recipe.title }}">
        </div>
    </div>

    <div class="item">
        <div>Chef</div>
        <div>
            <select name="chef" class="input__create" >
                {% for chef in chefOptions %}
                    <option value="{{ chef.id }}" {% if recipe.chef_id == chef.id %} selected {% endif %}>
                        {{ chef.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
    </div>


    <div class="item">
        <div>Ingredientes</div>
        <div id="ingredients">
        {% if recipe.ingredients %}
            {% for ingredients in recipe.ingredients %} 
            <div class="ingredient">
            <input 
                class="input__create" 
                type="text" 
                name="ingredients[]" 
                value="{{ ingredients }}">
            </div>
            {% endfor %}
        {% else %}
         <div class="ingredient">
            <input 
            class="input__create" 
            type="text" 
            name="ingredients[]">
            </div>
        {% endif %}
        </div>
        <button type="button" class="add-ingredient button-add">Adicionar novo ingrediente</button>
    </div>

    <div class="item">
        <div>Modo de preparo</div>
        <div id="preparation">
        {% if recipe.preparation %}
            {% for preparation in recipe.preparation %}
            <div class="preparation">
                <input 
                class="input__create" 
                type="text" 
                name="preparation[]" value="{{ preparation }}" >
            </div>
            {% endfor %}
        {% else %}
            <div class="preparation">
                <input 
                class="input__create" 
                type="text" 
                name="preparation[]" value="{{ preparation }}" >
            </div>
        {% endif %}
        </div>
        <button type="button" class="add-preparation button-add">Adicionar novo passo</button>
    </div>

    <div class="item">
        <div>Informações adicionais</div>
        <div>
            <textarea 
            class="input__create-information"
                cols="30" 
                rows="10" 
                name="information">{{ recipe.information }}</textarea>
        </div>
    </div>
</div>