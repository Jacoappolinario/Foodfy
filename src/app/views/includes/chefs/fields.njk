<div class="details">

    <div class="item">
        <div>Nome</div>
        <div>
            <input 
            class="input__create" 
            type="text" 
            name="name"
            value="{{ chef.name }}">
        </div>
    </div>

    <div class="item">
        <div>Avatar</div>
        <div id="photos-preview">
            <div id="photos-upload">
                <input 
                id="photos-input"
                type="file" 
                name="photos" 
                single="single"
                accept="image/*"
                onchange="PhotosUpload.handleFileInput(event, 1)"
                >
                <div class="photos-add">
                    <i class="material-icons">add</i>
                </div>
            </div>
        </div>
    </div>


    
</div>