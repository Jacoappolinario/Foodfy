{% extends "layouts/admin.njk" %}

{% block head %}
    <title>Gerenciar Receitas | {{ recipe.title }}</title>
{% endblock %}

{% block content %}
<div class="show-header">
    <h2>Usu√°rios</h2>
    <a href="/admin/users/create" class="button">Novo</a>
</div>
<div class="list_content">
    {% for user in users %}
    <div class="item">
        <div>{{ user.name }}</div>
        <p>{{ user.email }}</p>
        <div class="list_options">
            <a href="/admin/users/{{user.id}}/edit">Editar</a>
            <form method="post" action="/admin/users?_method=DELETE">
                <input 
                type="hidden" 
                name="id" 
                value="{{ user.id }}">

                <button>Remover</button>
            </form>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}  

        