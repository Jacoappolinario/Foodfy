<div class="details">

    <div class="item">
        <div>Nome</div>
        <div>
            <input 
            class="input__create" 
            type="text" 
            name="name"
            value="{{ chef.name }}">
        </div>
    </div>

    <div class="item">
        <div>Avatar</div>
            <div>
                {% if files %}
                {% for image in files %}
                <div>
                    <input 
                        class="input__create" 
                        type="text" 
                        name="link da receita" 
                        value="{{ image.name }}" 
                        disabled
                    >
                </div>
                {% endfor %}
                {% endif %}
                <div id="avatar-upload">
                    <input 
                    id="avatar-input"
                    type="file" 
                    name="photos" 
                    accept="image/*"
                    onchange="AvatarUpload.selected(event)"
                    >
                    <p>Enviar Avatar</p>
                </div>
                {# <input type="hidden" name="avatar_photo"> #}
            </div>
        </div>
    </div>
    
</div>