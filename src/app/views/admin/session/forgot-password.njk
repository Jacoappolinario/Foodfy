{% extends "admin/session/layout.njk" %}

{% block content %}
<section class="password container form">
    <form method="POST" action="/admin/users/login">

        <div class="header">
            <h3>Esqueceu a Senha?</h3>
        </div>

        <div class="fields">
            <div class="item">
            <div>Email</div>
            <div class="input">
                <input 
                type="email" 
                name="email" 
                placeholder="Digite seu email"
                value="{{ user.email }}"
                onblur="Validate.apply(this, 'isEmail')"
                >
            </div>
        </div>

        <div class="button-send">
            <button class="button" type="submit">Recuperar</button>
        </div>

    </form>
</section>
{% endblock content %}