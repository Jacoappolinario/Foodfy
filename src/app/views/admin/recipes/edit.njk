{% extends "layouts/admin.njk" %}

{% block head %}
    <title>{{ recipe.title }} | Edit</title>
{% endblock head %}


{% block content %}
    
    <div class="edit-header">
        
        <h2>Editando receita</h2>

        <button type="submit" form="form-delete" id="button-delete">Deleta</button>
        <button type="submit" form="form-salvar" id="button-salvar">Salvar receita</button>
    </div>

    <form id="form-salvar" method="POST" action="/admin/recipes?_method=PUT">
        
        {% include "includes/recipes/fields.njk" %}

        <input 
        type="hidden" 
        name="id" 
        value="{{ recipe.id }}">
    </form>
   
    <form id="form-delete" method="POST" action="/admin/recipes?_method=DELETE">
        <input 
        type="hidden" 
        name="id" 
        value="{{ recipe.id }}">
    </form>  

{% include "includes/confirm.njk" %}

{% endblock content %}