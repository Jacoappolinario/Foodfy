{% extends "layouts/admin.njk" %}

{% block head %}
    <title>{{ chef.name }} | Edit</title>
{% endblock %}

{% block content %}

<div class="edit-header">
    <h2>Editando Chef</h2>
    {# {% if chef.total_recipes == '0' %} #}
        <button type="submit" class="button delete" onclick="Message.confirmDelete()">Delete</button>
    {# {% else %}
        <button type="submit" class="button delete" onclick="Message.error(event)">Delete</button>
    {% endif %} #}
    <button type="submit" form="form-save" class="button">Salvar Chef</button>
</div>


<form id="form-save" method="POST" action="/admin/chefs?_method=PUT" enctype="multipart/form-data">
    {% include "admin/includes/chefs/fields.njk" %}

    <input 
    type="hidden" 
    name="id" 
    value="{{ chef.id }}">
</form>

<form id="form-delete" method="POST" action="/admin/chefs?_method=DELETE">
    <input 
    type="hidden" 
    name="id" 
    value="{{ chef.id }}">
</form>

{% endblock content %}