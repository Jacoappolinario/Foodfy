{% extends "layouts/admin.njk" %}

{% block head %}
    <title>Gerenciar Chefs | {{ chef.name }}</title>
{% endblock %}

{% block content %}
<div class="show-header">
    <h2>Chef: {{ chef.name }}</h2>
    {% if session.isAdmin %}
    <a href="/admin/chefs/{{ chef.id }}/edit" class="button">Editar Chef</a>
    {% endif %}
</div>

<div class="chefs__details">
    <div class="chef__image">
        {% if not files %}
        <img src="http://placehold.it/200x200?text=CHEF SEM FOTO" alt="">
        {% else %}
        <img 
            src="{{ files.src }}" 
            alt="{{ files.name }}"
        >
        {% endif %}
        
    </div>

    <div class="chef__name">
        <h1>{{ chef.name }}</h1>
    </div>

    <div class="chef__amount-recipes">
        <p>{{ chef.total_recipes }} receitas</p>
    </div>
</div>

<div class="admin__content">
    <h2>Receitas</h2>

    <div class="card__admin">
        {% for recipe in recipes %}
        
        <div class="card__recipes">
            
            <section class="list__image">
                <img src="{{ recipe.img }}" alt="">
            </section>
            
            <section>
            
            <div class="list__title">
                <h1>{{ recipe.title }}</h1>
            </div>

            <div class="list__author">
                <p>{{ recipe.author }}</p>
            </div>

            <a class="list__visualize" href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
            </section>

        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}  
