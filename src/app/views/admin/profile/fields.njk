<div class="details">

    <div class="item">
        <div>Nome</div>
        <div>
            <input 
            class="input__create" 
            type="text" 
            name="name"
            value="{{ user.name }}"
            >
        </div>

    </div>

    <div class="item">
        <div>Email</div>
        <div>
            <input 
            class="input__create" 
            type="email" 
            name="email"
            value="{{ user.email }}"
            >
        </div>
    </div>

    <div class="item">
        <div>Senha</div>
        <div>
            <input 
            class="input__create" 
            type="password" 
            name="email"
            placeholder="Digite sua senha"
            >
        </div>
    </div>

</div>