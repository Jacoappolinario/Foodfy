{% macro recipes(name, classes, recipes, filter) %}

<section>

    <div class="{{ classes }}">
        {% if name %}
            <h1>{{ name }} {% if filter %} "{{ filter }}" {% endif %}</h1>
        {% endif %}
    </div>

    <section class="cards">
        {% for recipe in recipes %}
        <div class="card" id="{{ recipe.id }}">
            <div class="card__image-container">
                <img src="{{ recipe.img }}" alt="">
            </div>

            <div class="card__title">
                <p>{{ recipe.title }}</p>
            </div>

            <div class="card__author">
                <p>{{ recipe.author }}</p>
            </div>
        </div>
        {% endfor %}
    </section>

</section>

{% endmacro %}