{% extends "site/recipes/layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}
<div class="recipes">
<section class="cards">
    {% for recipe in recipes %}
    <div class="card" id="{{ recipe.id }}">
        <div class="card__image-container">
            <img src="{{ recipe.image }}" alt="Imagem de {{ recipe.image }}">
        </div>

        <div class="card__title">
            <p>{{ recipe.title }}</p>
        </div>

        <div class="card__author">
            <p>{{ recipe.author }}</p>
        </div>
    </div>
    {% endfor %}

